<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineInfo">

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:id="@+id/back"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back">

    <ImageView
        android:id="@+id/med_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_medicine_logo"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/med_logo"
        android:textColor="#818183"
        android:textSize="18dp"
        android:text="@string/name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/med1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_toRightOf="@id/med_logo"
        android:textSize="24dp"
        android:text="@string/fexofay_a"
        android:textColor="@color/wiki2"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/med_logo"
        android:textColor="#818183"
        android:textSize="18dp"
        android:text="@string/dose"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/med1_name"/>
    <TextView
        android:id="@+id/med2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/med_logo"
        android:textSize="24dp"
        android:text="@string/_1_per_day"
        android:textColor="@color/wiki1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/med_logo"
        android:textColor="#818183"
        android:textSize="18dp"
        android:text="@string/time"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/med2_name"/>
    <TextView
        android:id="@+id/med3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_toRightOf="@id/med_logo"
        android:textSize="24dp"
        android:text="@string/bed_time"
        android:textColor="@color/wiki1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10sp"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/med3_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/wiki1"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="@string/program"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#424245"
        android:textSize="18dp"
        android:text="@string/total_8_weeks_6_weeks_left"/>

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/wiki1"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="@string/quantity"/>

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#424245"
        android:textSize="18dp"
        android:text="@string/total_56_capsules_42_capsules_left"/>

    </RelativeLayout>

</RelativeLayout>